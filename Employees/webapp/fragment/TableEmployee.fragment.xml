<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core">

    <Panel> 
            <Button id="btnShow"
                text="{i18n>ShowButton}"
                press="ShowCity"
                visible="{JsonConfig>/visibleBtnShowCity}"
                class="sapUiSmallMarginEnd" />
            <Button id="btnHide"
                text="{i18n>HideButton}"
                press="HideCity"
                visible="{JsonConfig>/visibleBtnHideCity}"
                class="sapUiSmallMarginEnd" />

            <Table id="tableEmployee" items="{odataNorthwind>/Employees}">
                <columns>
                    <Column visible="{JsonConfig>/visibleID}">
                        <header> 
                            <Label text="{i18n>TableId}"/>
                        </header>
                    </Column>
                    <Column  visible="{JsonConfig>/visibleName}">
                        <header> 
                            <Label text="{i18n>TableName}"/>
                        </header>
                    </Column>
                    <Column visible="{JsonConfig>/visibleCountry}">
                        <header> 
                            <Label text="{i18n>TableCountry}"/>
                        </header>
                    </Column>
                    <Column visible="{JsonConfig>/visibleCity}">
                        <header> 
                            <Label text="{i18n>TableCity}"/>
                        </header>
                    </Column>
                    <Column width="100px">
                        <header> 
                            <Label text="{i18n>TableShowDetails}"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="showEmployee">
                        <cells>
                            <Label text="{odataNorthwind>EmployeeID}"/>
                            <Label text="{odataNorthwind>LastName} , {odataNorthwind>FirstName}"/>
                            <Label text="{odataNorthwind>Country}" />
                            <Label text="{odataNorthwind>City}"/>
                            <core:Icon src="sap-icon://show" press="ShowOrders"></core:Icon>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <HBox id="OrdersTable" >
                                
            </HBox>
    </Panel>                        


</core:FragmentDefinition>