<mvc:View controllerName="logaligroup.Employees.controller.MasterEmployee" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core">
	
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox wrap="Wrap">
                            <Label id="labelEmployee" 
                                   class="sapUiSmallMargin"    
                                   text="{i18n>labelEmployee}" 
                                   labelFor="imputEmployee"/>
                            <Input id="imputEmployee" 
                                   maxLength="6"  
                                   width="200px" 
                                   class="sapUiSmallMarginEnd" 
                                   liveChange="onValidate"
                                   value="{JsonCountries>/EmployeeIdgeneral}"/>
                            <Label id="labelCountry" 
                                   class="sapUiSmallMargin"    
                                   text="{i18n>labelCountry}" 
                                   labelFor="slCountry"
                                   visible="true"/>
                            <Select id="slCountry" visible="true" forceSelection="false"
                                    selectedKey="{JsonCountries>/CountryKey}"
                                    items="{JsonCountries>/ListCountry}">
                                <items>
                                    <core:Item key="{JsonCountries>Key}" text="{JsonCountries>Text}"/>
                                    
                                </items>

                            </Select>
                            <Button id="btnFilter" 
                                    class="sapUiSmallMarginEnd" 
                                    text="{i18n>btnFilter}"
                                    icon="sap-icon://filter"
                                    press="onFilter"/>
                            <Button id="btnClearFilter"  
                                    class="sapUiSmallMarginEnd" 
                                    text="{i18n>btnClearFilter}"
                                    icon="sap-icon://clear-filter"
                                    press="onClearFilter"/>
                        </HBox>

                    <core:Fragment fragmentName="logaligroup.Employees.fragment.TableEmployee" type="XML"/>
                    </content>
				</Page>
			
</mvc:View>
