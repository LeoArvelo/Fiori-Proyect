<mvc:View controllerName="logaligroup.Employees.controller.Main" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:f="sap.f">

    
<Shell id="shell">
	<App id="app">
		<pages>
            <Page showHeader="false">
                <content>
                    <f:FlexibleColumnLayout id="fcl"
                                            backgroundDesign="Solid"
                                            layout="{JsonLayouts>/ActiveKey}">
                        <f:beginColumnPages>
                            <mvc:XMLView id="MasterEmployee" 
                                         viewName="logaligroup.Employees.view.MasterEmployee" />
                        </f:beginColumnPages> 

                        <f:midColumnPages>
                            <mvc:XMLView id="detailEmployeeView" 
                                         viewName="logaligroup.Employees.view.EmployeeDetails" />
                        
                        </f:midColumnPages>   

                        <f:endColumnPages>
                            <Page >
                            
                            </Page>
                        </f:endColumnPages>                
                    </f:FlexibleColumnLayout>
                </content>
                <footer>
                    <Toolbar >
                        <Label text="{i18n>layout}" class="sapUiSmallMargin"/>
                        <Select items="{JsonLayouts>/Layout}" selectedKey="{JsonLayouts>/ActiveKey}">
                            <core:Item key="{JsonLayouts>Key}" text="{JsonLayouts>Text}"></core:Item>
                        
                        </Select>
                    </Toolbar>
                </footer>
            </Page>
        </pages>
	</App>
</Shell>

</mvc:View>