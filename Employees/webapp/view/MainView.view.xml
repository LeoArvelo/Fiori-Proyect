<mvc:View controllerName="logaligroup.Employees.controller.MainView" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox >
                            <Label id="labelEmployee" 
                                   class="sapUiSmallMargin"    
                                   text="{i18n>labelEmployee}" 
                                   labelFor="imputEmployee"/>
                            <Input id="imputEmployee" 
                                   maxLength="6"  
                                   width="200px" 
                                   class="sapUiSmallMarginEnd" 
                                   liveChange="onValidate"
                                   value="{/EmployeeIdgeneral}"/>
                            <Label id="labelCountry" 
                                   class="sapUiSmallMargin"    
                                   text="{i18n>labelCountry}" 
                                   labelFor="slCountry"
                                   visible="true"/>
                            <Select id="slCountry" visible="true" forceSelection="false"
                                    selectedKey="{/CountryKey}"
                                    items="{/ListCountry}">
                                <items>
                                    <core:Item key="{Key}" text="{Text}"/>
                                    
                                </items>

                            </Select>
                            <Button id="btnFilter" 
                                    class="sapUiSmallMarginEnd" 
                                    text="{i18n>btnFilter}"
                                    icon="sap-icon://filter"
                                    press="onFilter"/>
                            <Button id="btnClearFilter"  
                                    class="sapUiSmallMarginEnd" 
                                    text="{i18n>btnClearFilter}"
                                    icon="sap-icon://clear-filter"
                                    press="onClearFilter"/>
                        </HBox>

                        <HBox >
                            <Panel> 
                                <Table id="tableEmployee" items="{/Employees}">
                                    <columns>
                                        <Column >
                                            <header> 
                                                <Label text="{i18n>TableId}"></Label>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header> 
                                                <Label text="{i18n>TableName}"></Label>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header> 
                                                <Label text="{i18n>TableCountry}"></Label>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header> 
                                                <Label text="{i18n>TableCity}"></Label>
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="onShowPostalCode">
                                            <cells>
                                                <Label text="{EmployeeID}"/>
                                                <Label text="{LastName} , {FirstName}"/>
                                                <Label text="{Country}"/>
                                                <Label text="{City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
