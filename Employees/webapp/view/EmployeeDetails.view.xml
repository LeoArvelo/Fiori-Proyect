<mvc:View controllerName="logaligroup.Employees.controller.EmployeeDetails" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core">
<Page title="{i18n>employeeDetails}">
    
    <Panel >
        <FlexBox height="65px" alignItems="Center" justifyContent="Center">
            <items>
                <Text text="{JsonEmployees>LastName} , {JsonEmployees>FirstName}" class="boldText"/>
            </items>
        </FlexBox>
        <FlexBox height="65px" alignItems="Start" justifyContent="SpaceBetween">
            <items>
                <VBox >
                    <Text text="{i18n>employeeID}" class="boldText sapUiSmallMarginEnd"/>
                    <Text text="{JsonEmployees>EmployeeID}"/>
                </VBox>
                <VBox >
                    <Text text="{i18n>employeeTitle}" class="boldText sapUiSmallMarginEnd"/>
                    <Text text="{JsonEmployees>Title}"/>
                </VBox>
            </items>
        </FlexBox>

        <FlexBox alignItems="Start">
            <items>
                <HBox>
                    <Text text="{i18n>Countrycode}" class="boldText sapUiSmallMarginEnd"/>
                    <Text text="{JsonEmployees>Country}"/>
                    <layoutData>
                        <FlexItemData growFactor="3"/>
                    </layoutData>
                </HBox>
                <HBox>
                    <Text text="{i18n>City}" class="boldText sapUiSmallMarginEnd"/>
                    <Text text="{JsonEmployees>City}"/>
                    <layoutData>
                        <FlexItemData growFactor="2"/>
                    </layoutData>
                </HBox>
                <FlexBox direction="Row" alignItems="Start">
                    <Text text="{i18n>PostalCode}" class="boldText sapUiSmallMarginEnd"/>
                    <Text text="{JsonEmployees>PostalCode}"/>
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                </FlexBox>
            </items>
        </FlexBox>
    </Panel>
</Page>
</mvc:View>